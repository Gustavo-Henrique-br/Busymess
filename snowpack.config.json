{
  "buildOptions": {
    "clean": true,
    "out": "build"
  },
  "mount": {
    "public": "/",
    "src": "/assets"
  },
  "plugins": [
    "@snowpack/plugin-sass",
    "snowpack-plugin-relative-css-urls"
  ],

  "optimize": {
    "bundle": true,
    "minify": true,
    "target": "es2018",
    "treeshake": true,
    "splitting": true
  }
}